<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Your Reports</title>
    <link rel="stylesheet" href="stylesheets/allReports.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
  </head>
  <body>

    <nav class="navbar navbar-expand-lg bg-light" style="background-color: #e3f2fd;">
        <div class="container-fluid" style="padding-left:8%; padding-right:10%">
            <a class="navbar-brand" href="/">E-Care Chain</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/">Home</a>
                </li>

               
 
            </ul>
           
                <a href="/logout"><button class="btn btn-outline-success" type="submit">Logout</button></a>
            
            </div>
        </div>
    </nav>

    <div class="container" style="margin-top : 100px">
        <div class="row">
        {% if reports.length == 0 %}
            <h1>No Reports Available</h1>
        
        {% else %}
            {% for i in 1..reports.length %}
                <div class="col-lg-4">
                    <div class="card card-margin">
                        <div class="card-header no-border">
                        
                        </div>
                        <div class="card-body pt-0">
                            <div class="widget-49">
                                <div class="widget-49-title-wrapper">
                                    <div class="widget-49-date-primary">
                                        <span class="widget-49-date-day">{{ reports[i-1].date}}</span>

                                    </div>
                                    <div class="widget-49-meeting-info">
                                        <h5 class="card-title">{{ reports[i-1].testName}}</h5>
                                    
                                    </div>
                                </div>
                                <br>
                                
                                <ul class="widget-49-meeting-points">
                                    <h6 class="widget-49-meeting-item">Uploaded By : <span>{{reports[i-1].labName}}</span></h6>
                                    <h6 class="widget-49-meeting-item"> By<span>{{ reports[i-1].labName}}</span></h6>
                                </ul>
                                <div class="widget-49-meeting-action">
                                    <a href={{reports[i-1].link}} class="btn btn-sm btn-flash-border-primary" target="_blank">View Your Report</a>
                                </div> 
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        {% endif %}

        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
  </body>
</html>